<%- include('header') %>

<h1>Votre deck:</h1>

<div class="cardsContainer">
  <% cards.forEach( (card) => { %>

    <div class="card">
      <a href="/card/<%= card.id %>">
        <img src="/visuals/<%= card.visual_name %>" alt="<%= card.name %> illustration">
        <p class="cardName"><%= card.name %></p>
      </a>
      <a class="link--removeCard" title="Enlever cette carte du deck" href="/deck/remove/<%=card.id%>">[ - ]</a>
    </div>
  <% }) %>
</div>

<%- include('footer') %>